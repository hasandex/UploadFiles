@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}
<div class="row">
    <div class="container mb-4 col-2">

        <a asp-action="Create" class="btn btn-success"> Add Category </a>

    </div>

</div>

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No Categories were added yet!
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr class="table-dark">
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <img src="@($"{Settings.imagesPath}/{category.Image}")" />
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-categoryId="@category.Id" class="btn btn-info rounded rounded-3 me-4">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-categoryId="@category.Id" class="btn btn-danger rounded rounded-3">
                            <i class="bi bi-trash"></i>
                        </a>
                    
                    </td>
                </tr>
                
               
            }
        </tbody>
    </table>
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    img {
        max-width: 100px;
        max-height: 100px;
    }
</style>    
