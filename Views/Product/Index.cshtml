@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}
<div class="row">
    <div class="container mb-4 col-2">

        <a asp-action="Create" class="btn btn-success"> Add Product </a>

    </div>

</div>

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No Products were added yet!
    </div>
}
else
{
    <table class="table table-hover" id="page">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr class="table-dark">
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>
                        <a asp-action="ProductImages" asp-route-id="@product.Id" class="btn btn-light rounded rounded-3"><i class="bi bi-eye"></i> </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-productId="@product.Id" class="btn btn-info rounded rounded-3 me-4">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a href="javascript:;"
                           class="js-delete btn btn-danger rounded rounded-3" data-id="@product.Id">
                            <i class="bi bi-trash"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="~/js/product-index.js"></script>
}